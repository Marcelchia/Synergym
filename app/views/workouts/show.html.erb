<body class="workoutshowbody">
	<div class = "container">

		<p class="workouttext">
		  <strong>Type:</strong>
		  <%= @exercise.capitalize %>

		</p>

		<p class="workouttext">
		  <strong>Description</strong>
		  <%= @workout.description %>
		</p>

		<p class="workouttext">
		  <strong>Date: </strong>
		  <%= @workout.date %>
		</p>


		<br/>
		<div class ="workoutprofilebutton">
		<div class ="row-md">


		<div class ="column-md , profilesubbutton">


		<button class="btn btn-dark"><%= link_to 'Edit', update_workout_path , class:"buttontext" %></button>



		<button class="btn btn-dark"><%= link_to 'Home', home_path , class:"buttontext" %></button>

		<button class="btn btn-dark"><%= link_to 'Back', workouts_path , class:"buttontext" %></button>



		<button class="btn btn-dark"><%= link_to 'Delete', workout_path,
		        method: :delete,
		        data: { confirm: 'Are you sure?' }  , class:"buttontext" %></button>

	</div>
	</div>
	</div>
	</div>
	</div>
