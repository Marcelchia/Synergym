<body class="workoutindexbody">
	<div class="container">
		<h1 class="workoutheading">Workout Lists</h1>

	<%= button_to "Add workouts", new_workout_path, method: :get, class: "btn btn-dark" %>

			<div class="workouttext">


								<table class="table table-dark">

	<thead>
    <tr>

      <th scope="col">Workout Day</th>

      <th scope="col">Description</th>

      <th scope="col">Date</th>

      <th scope="col">Details</th>

      </tr>
  </thead>


  <tbody>
    <tr>

				<% @workouts.each do |workout| %>

		   <td><%= workout.workout_category.description %></td>


		   <td><%= workout.description %></td>


      <td><%= workout.date %></td>

      <td><button class="buttontextmeal"><%= link_to 'Details', workout_path(workout) , class: "btn btn-white" %></button></td>
    </tr>




				<% end %>




			</div>
	</div>

</body>