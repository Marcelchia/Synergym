<body class="mealnewbody">
	<div class="container">

<h1 class="mealnewheading">Enter Your Meal</h1>
<div class="mealeditform">
<%= form_with scope: :meal, url: meals_path, local: true do |form| %>
  <p>
  <strong><%= form.label :type %></strong><br>
  <%= form.collection_select :meal_category_id, @meal_categories, :id, :description %>
  </p>

  <p>
    <strong><%= form.label :description %></strong><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <strong><%= form.label :calories %></strong><br>
    <%= form.number_field :calories %>

  </p>

  <p>
    <strong><%= form.label :date %></strong><br>
    <%= form.date_field :date %>

  </p>

  	<p class="savebutton">
	  <%= form.submit class: "btn btn-dark"%>
	</p>

<% end %>
</div>
<div class ="backbutton">
<%= button_to 'Back', meals_path , method: :get, class:"btn btn-dark" %>
</div>
</div>
</body>