<body class="mealbody">
	<div class="container">
		<h3 class="mealheading">Meals</h3>
			<div class="mealtext">

				<% @meals.each do |meal| %>


		  			<p class="meallist">
		  				 <strong>Type:</strong>
		  				<%= meal.meal_category.description.capitalize %>
		  			</p>

		  			<p class="meallist">
		  				<strong>Description: </strong>
		  				<%= meal.description %>
		  			</p>

		  			<p class="meallist">
		  				<strong>Date: </strong>
		  				<%= meal.date %>
		  			</p>

		  			<p class="meallist">
		  				<strong>Calories:</strong>
		  				<%= meal.calories %>
		  			</p>




						<p class="meallist">
		  				<button class="btn btn-white"><%= link_to 'Details', meal_path(meal) , class:"buttontext" %></button>
						</p>


				<% end %>

			</div>
	</div>
	<%= button_to "Add meals", new_meal_path, method: :get, class: "btn btn-dark" %>
</body>